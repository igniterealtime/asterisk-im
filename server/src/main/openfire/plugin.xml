<?xml version="1.0" encoding="UTF-8"?>

<plugin>
    <class>org.jivesoftware.phone.asterisk.AsteriskPlugin</class>
    <name>${pom.name}</name>
    <description>${pom.description}</description>
    <author>${pom.organization.name}</author>
    <version>${pom.version}</version>
    <date>${openfire-plugin.build.date}</date>
    <minServerVersion>3.6.0</minServerVersion>
    <databaseKey>asterisk-im</databaseKey>
    <databaseVersion>2</databaseVersion>

    <adminconsole>
        <tab id="tab-phone" name="Asterisk-IM" url="phone-settings.jsp"
             description="Click to manage Asterisk integration settings">

            <sidebar id="siderbar-phone" name="Asterisk-IM">
                <item id="item-phone-settings" name="General Settings"
                      description="General phone settings"
                      url="phone-settings.jsp"/>
                <item id="item-phone-users" name="Phone Mappings"
                      description="Mapping between usernames and phones"
                      url="phone-users.jsp"/>
            </sidebar>

        </tab>
    </adminconsole>

</plugin>
